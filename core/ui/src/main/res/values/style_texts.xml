<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>


    <style name="Text.Display.Small" parent="Text.Medium">
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">40sp</item>
    </style>

    <style name="Text.Headline.Medium" parent="Text.Medium">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">36sp</item>
    </style>

    <style name="Text.Title.Large" parent="Text.Medium">
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="Text.Title.Medium" parent="Text.Medium">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">+0.02</item>
    </style>

    <style name="Text.Label.Large" parent="Text.Medium">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">+0.01</item>
    </style>

    <style name="Text.Label.Small" parent="Text.Medium">
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">+0.05</item>
    </style>


    <style name="Text.Body.Large" parent="Text.Regular">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">+0.08</item>
    </style>

    <style name="Text.Body.Medium" parent="Text.Regular">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">+0.04</item>
    </style>



</resources>